.logo
  text-align right
  .logo__link
    text-decoration none
  .logo__img
    margin 0 0 17px 0
  .logo__slogan
    padding 0 0 0 5px
    color #888888
    font normal 1.06em 'Myriad Pro Condensed'
.widget
  h4
    color #484848
    font normal 0.875em 'Myriad Pro Semibold'


.main-nav
  text-align right
.main-nav__item--item0
  margin 0 0 26px 0

.main-nav__item--item1
  margin 0 0 31px 0

.main-nav__item--item2
  margin 0 0 24px 0

.main-nav__item--item3
  margin 0

.main-nav__list
  line-height 14px
  .main-nav__list-item
    a
      color #888888
      font normal 0.875em 'Myriad Pro Regular'
      text-decoration none
      &:hover
        text-decoration underline
  .main-nav__list-item--title
    margin 0 0 4px 0
    color #484848
    font normal 0.875em 'Myriad Pro Semibold'



.flickr__title
  margin 0 0 19px
  text-align right

.flickr__list
  margin 0 0 0 -20px
  overflow hidden

.flickr__list-item
  float right
  margin 0 0 8px 13px
  padding 2px
  border 1px solid #e0e0e0
  line-height 1px


.twitter
  text-align right

.twitter__title
  margin 0 0 19px 0
.twitter__item
  margin 16px 0 0 0
  &:first-child
    margin 0
.twitter__post
  font-size 0.875em
  word-spacing -1px
  a
    color #2a99d8
    font-size 14px
    text-decoration none
.twitter__post__text
  margin 0 0 6px 0

.twitter__post__time
  font-family 'Myriad Pro Condensed'


#bvs-slider
  width 640px
  height 400px
  margin 0 auto
  position relative
  overflow hidden
  ul
    width 100%
    height 100%
    list-style none
    padding 0
    margin 0
    li
      position absolute
      top -400px
      left 640px
      width 100%
      height 100%
      &:first-child
        top 0
        left 0
      .txt
        position absolute
        top 0
        left 480px
        width 160px
        height 100%
        padding 20px
        overflow hidden
        color #ffffff
        background rgba(0, 0, 0, 0.5)
      .txt-wrap
        width 100%
        height 100%
        overflow hidden


.blog
  padding 0 0 8px 0
  border-bottom 1px solid #d2d0d0
.blog__item
  margin  0 0 30px 0
  overflow hidden
.blog__item__img
  float left
  padding 7px 0 0 0
  line-height 1px

.blog__item__preview
  margin 0 0 0 341px
.blog__item__title
  margin 0 0 29px 0
  color #494949
  font bold 22px 'Myriad Pro Condensed'

.blog__item__info
  margin 0 0 15px 0
  font-size 12px

.blog__item__text
  margin 0 0 34px 0
  font-size 14px

.blog__item__link
  float right
  margin 0 19px 0 0
  color #2a99d8
  font normal 14px 'Myriad Pro Semibold Italic'
  text-decoration none
  &:hover
    text-decoration underline


.contacts-form
  width 460px
  margin 0 0 0 108px

.contacts-form__input-textarea
.contacts-form__input-text
  width 220px
  border 1px solid #e3e3e3
  font normal 12px 'myriad pro regular'

.contacts-form__input-text
  height 30px
  padding 0 0 0 6px

.contacts-form__input-textarea
  padding 5px
  min-height 110px
  resize vertical

.contacts-form__wrap
  overflow hidden

.contacts-form__item
  margin 0 0 15px 0

.contacts-form__item--fleft
  float left
  width 220px
  margin 0 14px 15px 0


.contacts-form__item--clear
  padding 18px 20px 0 0
  clear both
  text-align right

.contacts-form__input-submit
  width 142px
  height 48px
  border none
  background url("../img/submit-bg.png") no-repeat
  color white
  font bold 16px 'Myriad Pro Semibold'

.copyrgt
  font normal 10px 'Myriad Pro Regular'

